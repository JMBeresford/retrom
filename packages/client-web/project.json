{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "retrom-client-web",
  "targets": {
    "prettier:format": {},
    "dev": {
      "dependsOn": ["^build", "retrom-service:cargo:run"]
    },
    "dev:desktop": {
      "executor": "nx:run-commands",
      "continuous": true,
      "dependsOn": ["^build", "retrom-service:cargo:run"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "VITE_IS_DESKTOP=true vite"
      }
    },
    "build:desktop": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "cache": true,
      "options": {
        "cwd": "{projectRoot}",
        "command": "VITE_IS_DESKTOP=true vite build"
      }
    }
  }
}
