{
  "$schema": "../../node_modules/@tauri-apps/cli/schema.json",
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "A centralized game library/collection management service with a focus on emulation. Configure once, play anywhere.",
    "shortDescription": "Your own private cloud game-library service",
    "macOS": {
      "entitlements": "./entitlements.plist.xml"
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "build": {
    "beforeBuildCommand": "pnpm --shell-emulator --filter=web build:desktop",
    "beforeDevCommand": "pnpm --filter=web dev --port 3000",
    "frontendDist": "./web/dist",
    "devUrl": "http://localhost:3000"
  },
  "productName": "Retrom",
  "identifier": "com.retrom.client",
  "app": {
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "height": 720,
        "resizable": true,
        "title": "Retrom",
        "width": 1280
      }
    ],
    "security": {
      "csp": null
    }
  }
}
