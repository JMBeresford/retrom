{
  "name": "@retrom/client",
  "description": "The tauri wrapper for the retrom client",
  "type": "module",
  "scripts": {
    "dev": "tauri dev --no-watch --config tauri.dev.conf.json",
    "build": "tauri build --config tauri.build.conf.json ${BUILD_ARGS:-' '}",
    "format": "cargo fmt",
    "format:check": "cargo fmt --check",
    "lint": "cargo clippy",
    "lint:fix": "cargo clippy --fix"
  },
  "devDependencies": {
    "@tauri-apps/cli": "2.4.1",
    "@types/node": "^20",
    "execa": "^9.3.0"
  }
}
