{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "CARGO_*",
    "DEV",
    "SSR",
    "RETROM_*",
    "IS_DESKTOP",
    "BUILD_ARGS"
  ],
  "globalPassThroughEnv": ["APPLE_*", "TAURI_*", "GITHUB_TOKEN"],
  "tasks": {
    /* BUILDING */
    "build": {
      "dependsOn": ["^build", "cargo-build-transit"],
      "outputs": ["dist/**"]
    },
    // ensure TS+Rust packages build for both languages via this transit node
    // when calling 'build' -- no need to explicitly call 'cargo-build'
    "cargo-build-transit": {
      "dependsOn": ["cargo-build"]
    },
    "cargo-build": {
      "cache": false,
      "dependsOn": []
    },

    /* LINTING */
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"]
    },

    /* FORMATTING */
    "format": {
      "dependsOn": []
    },
    "format:check": {
      "dependsOn": []
    },

    /* OTHER */
    "dev": {
      "dependsOn": ["@retrom/codegen#build", "^build"],
      "persistent": true,
      "cache": false
    },
    "generate": {
      "outputs": ["generated/**"],
      "dependsOn": []
    }
  }
}
