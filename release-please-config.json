{
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "include-component-in-tag": false,
  "always-update": true,
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features"
    },
    {
      "type": "fix",
      "section": "Bug Fixes"
    },
    {
      "type": "perf",
      "section": "Performance Improvements"
    }
  ],

  "packages": {
    ".": {
      "release-type": "node",
      "extra-files": [
        { "type": "generic", "path": "Cargo.toml" },
        { "type": "generic", "path": "nix/pkgs/retrom-unwrapped/package.nix" },
        { "type": "generic", "path": "nix/pkgs/retrom-service/package.nix" }
      ]
    }
  }
}
