{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "bootstrap-sha": "4415f62c9d15b6921d23a356b21f0c6a10e2de57",
  "last-release-sha": "82b6101b3f8c29e37efaa13926a6e9f1e46f19a1",
  "plugins": [
    { "type": "cargo-workspace", "merge": false },
    { "type": "node-workspace", "merge": false },
    {
      "type": "linked-versions",
      "groupName": "retrom",
      "components": ["root", "client", "client/web", "codegen", "db", "service"]
    }
  ],
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "include-component-in-tag": false,
  "pull-request-title-pattern": "chore(release): release ${version}",

  "packages": {
    ".": {
      "release-type": "rust",
      "release-as": "0.0.6",
      "component": "root"
    },
    "packages/client": {
      "release-type": "rust",
      "release-as": "0.0.6",
      "component": "client"
    },
    "packages/client/web": {
      "release-type": "node",
      "release-as": "0.0.6",
      "component": "client/web"
    },
    "packages/codegen": {
      "release-type": "rust",
      "release-as": "0.0.6",
      "component": "codegen"
    },
    "packages/db": {
      "release-type": "rust",
      "release-as": "0.0.6",
      "component": "db"
    },
    "packages/service": {
      "release-type": "rust",
      "release-as": "0.0.6",
      "component": "service"
    }
  }
}
