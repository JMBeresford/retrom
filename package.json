{
  "name": "retrom",
  "version": "0.7.51",
  "type": "module",
  "nx": {
    "targets": {
      "noop": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm --version"
        }
      },
      "template:flatpak": {
        "executor": "nx:run-commands",
        "cache": false,
        "options": {
          "command": "node ./templates/write-flatpak-manifest.js dist/io.github.jmberesford.Retrom.yml",
          "cwd": "{projectRoot}"
        }
      },
      "markdownlint:lint": {
        "executor": "nx:run-commands",
        "options": {
          "command": "pnpm markdownlint-cli2 '**/*.md' '#**/node_modules' '#**/dist' '#**/target' --fix",
          "cwd": "{projectRoot}"
        },
        "configurations": {
          "check": {
            "command": "pnpm markdownlint-cli2 '**/*.md' '#**/node_modules' '#**/dist' '#**/target'"
          }
        }
      }
    }
  },
  "devDependencies": {
    "@monodon/rust": "catalog:",
    "@nx/eslint": "catalog:",
    "@nx/js": "catalog:",
    "@nx/vite": "catalog:",
    "@nx/web": "catalog:",
    "@retrom/configs": "workspace:*",
    "@semantic-release-cargo/semantic-release-cargo": "catalog:",
    "@semantic-release/changelog": "catalog:",
    "@swc-node/register": "catalog:",
    "@swc/core": "catalog:",
    "@swc/helpers": "catalog:",
    "@tauri-apps/cli": "catalog:",
    "@uptrace/web": "catalog:",
    "@vitest/ui": "catalog:",
    "conventional-changelog-conventionalcommits": "catalog:",
    "dotenv": "catalog:",
    "eslint": "catalog:",
    "handlebars": "catalog:",
    "jiti": "catalog:",
    "jsdom": "catalog:",
    "markdownlint-cli2": "catalog:",
    "nx": "catalog:",
    "nx-mcp": "catalog:",
    "prettier": "catalog:",
    "semantic-release": "catalog:",
    "tslib": "catalog:",
    "typescript": "catalog:"
  },
  "overrides": {
    "typescript": "catalog:",
    "tslib": "catalog:",
    "prettier": "$prettier",
    "eslint": "$eslint"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.26.1+sha512.664074abc367d2c9324fdc18037097ce0a8f126034160f709928e9e9f95d98714347044e5c3164d65bd5da6c59c6be362b107546292a8eecb7999196e5ce58fa",
  "dependencies": {
    "@opentelemetry/core": "catalog:"
  }
}
