{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "parallel": 5,
  "targetDefaults": {
    "tsc:typecheck": {
      "dependsOn": ["^tsc:typecheck"]
    },
    "build": {
      "dependsOn": ["typecheck"]
    },
    "prettier:format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm prettier --write .",
        "cwd": "{projectRoot}"
      },
      "configurations": {
        "check": {
          "command": "pnpm prettier --check ."
        }
      }
    },
    "buf:format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm buf format --write",
        "cwd": "{projectRoot}"
      },
      "configurations": {
        "check": {
          "command": "pnpm buf format --diff --exit-code"
        }
      }
    },
    "cargo:format": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "cargo fmt"
      },
      "configurations": {
        "check": {
          "command": "cargo fmt -- --check"
        }
      }
    },
    "cargo:run": {
      "executor": "@monodon/rust:run",
      "dependsOn": ["^cargo:build"],
      "continuous": true
    },
    "cargo:test": {
      "executor": "@monodon/rust:test",
      "dependsOn": ["^cargo:build"]
    },
    "cargo:lint": {
      "dependsOn": ["^cargo:lint"],
      "executor": "@monodon/rust:lint",
      "configurations": {
        "fix": {
          "args": ["--fix"]
        }
      }
    },
    "eslint:lint": {
      "dependsOn": ["^typecheck"],
      "configurations": {
        "fix": {
          "args": ["--fix"]
        }
      }
    },
    "cargo:build": {
      "dependsOn": ["^cargo:build"],
      "executor": "@monodon/rust:build",
      "cache": false,
      "defaultConfiguration": "release",
      "configurations": {
        "release": {
          "release": true
        },
        "debug": {
          "release": false
        }
      }
    }
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "eslint:lint"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "typecheckTargetName": "vite:typecheck",
        "buildTargetName": "vite:build",
        "previewTargetName": "vite:preview",
        "serveTargetName": "vite:serve",
        "devTargetName": "vite:dev",
        "serveStaticTargetName": "vite:serve-static",
        "buildDepsTargetName": "vite:build-deps",
        "watchDepsTargetName": "vite:watch-deps"
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "tsc:typecheck"
        },
        "build": {
          "targetName": "tsc:build",
          "buildDepsName": "tsc:build-deps",
          "watchDepsName": "tsc:watch-deps"
        }
      }
    },
    "@monodon/rust"
  ],
  "tui": {
    "enabled": true
  },
  "nxCloudId": "68671fe5462f6a349cd487bd"
}
